<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF1EB">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="#ECF1EB"
        android:backgroundTint="#ECF1EB"
        app:cardElevation="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#ECF1EB"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewUpdateTitle"
                    android:layout_width="382dp"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/UpdateTute_title"
                    android:textAlignment="center"
                    android:textColor="#5E9C1F"

                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="382dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp"

                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/UpdateTute_image"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/plantTuteUpdateMethod_Image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="0sp"
                    android:text="@string/UpdateTutprial_pName"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editTutePlntName"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25sp"

                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:inputType="text"

                    android:textAlignment="center"></EditText>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="382dp"
                    android:layout_height="42dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="0sp"
                    android:text="Method"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/methodTuteUpdate"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25sp"

                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:hint="Enter planting methods and other details"
                    android:inputType="textMultiLine"
                    android:lines="30"

                    android:textAlignment="center"></EditText>


                <Button
                    android:id="@+id/button_update"


                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="40sp"
                    android:background="@drawable/tute_button_search"
                    android:shadowColor="#090808"
                    android:text="@string/UpdateTuite_button"
                    app:strokeColor="#5CB65F" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>