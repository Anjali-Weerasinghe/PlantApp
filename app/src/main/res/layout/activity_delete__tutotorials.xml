<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11B12B"
    android:backgroundTint="#EFF6EF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#BBEDD5"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="40sp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"></ImageView>

            <TextView
                android:id="@+id/textViewDeleteTitle"
                android:layout_width="382dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/DeleteTute_Title"
                android:textAlignment="center"
                android:textColor="#5E9C1F"

                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDeletePlantId"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/DeleteTute_id"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etUsernamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"

                    android:background="#DCF6DD"
                    android:ems="10"
                    android:inputType="text"/>


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textViewDeleteType"
                android:layout_width="382dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/DeleteTute_Typw"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="300sp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"
                android:background="#FFFFFF"
                android:backgroundTint="#DCF6DD"
                android:ems="10"
                android:entries="@array/barr"
                android:textAlignment="center"></Spinner>


            <TextView
                android:id="@+id/textViewDeleteName"
                android:layout_width="382dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/DeletTute_Name"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="300sp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"

                android:background="#DCF6DD"
                android:ems="10"
                android:inputType="text"

                android:textAlignment="center"></EditText>


            <TextView
                android:id="@+id/textViewDeleteDescription"
                android:layout_width="382dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/DeleteTUTE_dESCR"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText

                android:layout_width="300sp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"

                android:background="#DCF6DD"
                android:ems="10"
                android:hint="Enter planting methods and other details"
                android:inputType="textMultiLine"
                android:lines="30"

                android:textAlignment="center"></EditText>


            <TextView
                android:id="@+id/textViewDeleteTuteImage"
                android:layout_width="382dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/DeleteImage_tute"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_send"


                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="40sp"
                android:background="#74BC2D"
                android:backgroundTint="#7AEA81"
                android:shadowColor="#090808"
                android:text="@string/DeleteTute_button"
                app:strokeColor="#5CB65F" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>