<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11B12B"
    android:backgroundTint="#EFF6EF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        tools:ignore="ScrollViewSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#BBEDD5"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="40sp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"></ImageView>


            <TextView
                android:id="@+id/text_delete_banner"
                android:layout_width="382dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="10sp"
                android:text="@string/delete_plant_banner"
                android:textAlignment="center"
                android:textColor="#5E9C1F"

                android:textSize="36sp"
                android:textStyle="bold" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="20sp"
                android:background="#FFFCFC"
                android:columnCount="2"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#BBEDD5"
                        android:orientation="vertical"
                        tools:ignore="ExtraText">


                        <TextView
                            android:id="@+id/text_delete_plant_item_number"
                            android:layout_width="138sp"
                            android:layout_height="65sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginBottom="10sp"
                            android:text="@string/deelete_plant_item_number"

                            android:textColor="#000000"

                            android:textSize="20sp"
                            android:textStyle="bold">

                        </TextView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#BBEDD5"
                        android:orientation="vertical"
                        tools:ignore="ExtraText">


                        <EditText
                            android:id="@+id/edit_delete_plant_item_number"
                            android:layout_width="150sp"
                            android:layout_height="78dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10sp"
                            android:layout_marginBottom="30sp"
                            android:background="#DCF6DD"
                            android:ems="10"
                            android:inputType="text"
                            android:text="@string/display_delete_item_number"
                            android:textAlignment="center"
                            android:textColor="#0d0a02"
                            android:textStyle="normal"></EditText>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>

            <TextView
                android:id="@+id/text_delete_plant_name"
                android:layout_width="382dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"

                android:text="@string/delete_plant_name"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_delete_plant_name"
                android:layout_width="300sp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="30sp"
                android:background="#DCF6DD"
                android:ems="10"
                android:inputType="text"
                android:text="@string/display_delete_plant_name"
                android:textAlignment="center"
                android:textColor="#121111"
                android:textStyle="normal"></EditText>


            <TextView
                android:id="@+id/text_delete_plant_type"
                android:layout_width="382dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"

                android:text="@string/delete_plant_type"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edit_delete_plant_type"
                android:layout_width="300sp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"
                android:layout_marginBottom="30sp"
                android:background="#DCF6DD"
                android:ems="10"
                android:inputType="text"
                android:text="@string/display_delete_plant_type"
                android:textAlignment="center"
                android:textColor="#121111"
                android:textStyle="normal"></EditText>


            <TextView
                android:id="@+id/text_delete_plant_price"
                android:layout_width="382dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="@string/delete_plant_price"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_delete_plant_price"
                android:layout_width="300sp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="0sp"
                android:background="#DCF6DD"
                android:ems="10"
                android:inputType="text"
                android:text="@string/display_delete_plant_price"
                android:textAlignment="center"
                android:textColor="#171313"
                android:textStyle="normal"></EditText>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="20sp"
                android:background="#FFFCFC"
                android:columnCount="2"
                android:rowCount="2">



                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#BBEDD5"
                        android:orientation="vertical"
                        tools:ignore="ExtraText">


                        <ImageView
                            android:id="@+id/delete_image"
                            android:layout_width="150sp"
                            android:layout_height="150sp"
                            android:layout_marginLeft="102sp"
                            android:padding="5sp"
                            android:paddingLeft="50sp"></ImageView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>


            <Button
                android:id="@+id/btn__plant_delete"


                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="40sp"
                android:background="#74BC2D"
                android:backgroundTint="#7AEA81"
                android:shadowColor="#090808"
                android:text="@string/delete_button"
                app:strokeColor="#5CB65F" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>