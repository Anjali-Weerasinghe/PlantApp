<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECF1EB"
    tools:context=".PlantItemView">

    <ImageView
        android:id="@+id/single_plant_item_img_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_back_border"
        android:scaleType="fitXY"
        android:src="@drawable/plant1" />

    <TextView
        android:id="@+id/text_plant_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="#ECF1EB"
        android:gravity="center"
        android:text="cherry"
        android:textColor="#756f6f"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text_plant_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="#ECF1EB"
        android:gravity="center"
        android:text="250"
        android:textColor="#756f6f"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text_plant_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:background="#ECF1EB"
        android:gravity="center"
        android:text="Fruit Plant"
        android:textColor="#756f6f"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/plant_delete_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_plant_item_type"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_style"
        android:text="Delete"
        android:textColor="#0a0707"
        app:strokeColor="#FBFFFB"
        ></Button>

</RelativeLayout>