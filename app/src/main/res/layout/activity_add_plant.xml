<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECF1EB"
        android:backgroundTint="#ECF1EB"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#ECF1EB"
                android:orientation="vertical"
                tools:ignore="UselessParent">


                <TextView
                    android:id="@+id/text_add_plant_banner"
                    android:layout_width="382dp"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/add_plant_banner"
                    android:textAlignment="center"
                    android:textColor="#5E9C1F"

                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_add_plant_name"
                    android:layout_width="382dp"
                    android:layout_height="63dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="0sp"

                    android:text="@string/add_plant_name"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edit_add_plant_name"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50sp"
                    android:layout_marginBottom="30sp"
                    android:background="#F6FDF7"
                    android:ems="10"
                    android:hint="@string/enter_new_plant_name"
                    android:inputType="text"
                    android:textAlignment="center"></EditText>

                <TextView
                    android:id="@+id/text_add_plant_type"
                    android:layout_width="382dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="0sp"

                    android:text="@string/add_plant_type"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/dropdown_add_plant_type"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="20sp"
                    android:background="#F6FFF6"
                    android:backgroundTint="#F6FDF7"
                    android:entries="@array/typebar"
                    android:scrollbarSize="20dp"></Spinner>

                <TextView
                    android:id="@+id/text_add_plant_price"
                    android:layout_width="382dp"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/add_plant_price"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_add_plant_price"
                    android:layout_width="300sp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="0sp"
                    android:background="#F6FDF7"
                    android:ems="10"
                    android:hint="@string/enter_plant_price"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"></EditText>


                <TextView
                    android:id="@+id/text_add_plant_image"
                    android:layout_width="382dp"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginBottom="10sp"
                    android:text="@string/textUploadPlantimage"
                    android:textAlignment="center"
                    android:textColor="#000000"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/add_plant_image"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginLeft="150sp"
                    android:layout_marginRight="50sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_add_photo_alternate_24"></ImageView>

                <TextView
                    android:id="@+id/text_image_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="50sp"
                    android:gravity="center"
                    android:text="0.0%">

                </TextView>

                <ProgressBar
                    android:id="@+id/image_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50sp"
                    android:layout_marginRight="50sp">


                </ProgressBar>

                <Button
                    android:id="@+id/btn_plant_add"


                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="40sp"
                    android:background="#FAFBF9"
                    android:backgroundTint="#379524"
                    android:shadowColor="#FFFAFA"
                    android:text="@string/add_button"
                    app:strokeColor="#FBFFFB" />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

